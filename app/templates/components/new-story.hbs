<h2>Add New Story</h2>
<div class="new-story">
  <form>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="author">Author</label>
          {{input class="form-control" value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Story Title</label>
          {{input class="form-control" value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="body">Story Body</label>
          {{input class="form-control" value=body id="body"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input class="form-control" value=date id="date"}}
        </div>

      </div>
      <div class="col-md-6">

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input class="form-control" value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          {{input class="form-control" value=category id="category"}}
        </div>

        <div class="form-group">
          <label for="featured">Featured</label>
          {{input class="form-control" value=featured id="featured"}}
        </div>
      </div>

    </div>
    <button class="btn btn-primary" {{action 'saveStory'}}>Save</button>
  </form>
</div>
